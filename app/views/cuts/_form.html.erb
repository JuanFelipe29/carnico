<%= form_with(model: cut) do |form| %>
  <% if cut.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(cut.errors.count, "error") %> prohibited this cut from being saved:</h2>

      <ul>
        <% cut.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :piece_id, style: "display: block" %>
    <%= form.collection_select :piece_id, Piece.includes(:piece_name).all, :id, :name, { prompt: 'Seleccione la pieza'} %>
  </div>

  <div>
    <%= form.label :cut_name_id, style: "display: block" %>
    <%= form.collection_select :cut_name_id, CutName.order(:name), :id, :name, { prompt: 'Seleccione el nombre del corte'} %>
  </div>

  <div>
    <%= form.label :weight, style: "display: block" %>
    <%= form.number_field :weight %>
  </div>

  <div>
    <%= form.label :final_weight, style: "display: block" %>
    <%= form.number_field :final_weight %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
